{
	"icon": "applications-multimedia",
	"label": "Multimedia codecs",
	"description": "Utilized by multimedia applications to encode or decode audio or video streams.",
	"license": [ "BSD", "GPLv2", "LGPLv2", "GFDL" ],
	"category": "Utilities",
	"scripts": {
		"exec": {
			"label": "Install",
			"command": "run-as-root dnf -y groupinstall multimedia --exclude=PackageKit-gstreamer-plugin,libva-intel-media-driver"
		},
		"undo": {
			"label": "Remove",
			"command": "run-as-root dnf -y remove vlc-plugins-freeworld"
		},
		"status": { "command": "rpm --quiet --query vlc-plugins-freeworld" }
	}
}
